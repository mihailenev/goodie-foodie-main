
  
  <div class="container">
    <!--<button type="button" class="btn btn-outline-danger my-2">Favourite</button>   Button to favourite meal-->
    <%if user_signed_in? %>
        <%if favourite_exists(current_user, @recipe['id'])%>
            <%=button_to 'Remove favourite', removefavourite_path(@recipe['id']), method: 'put', class: "btn btn-danger my-2" %>
        <%else%>
            <%=button_to 'Favourite', addfavourite_path(@recipe['id']), method: 'put', class: "btn btn-success my-2"%>
        <%end%>
    <%end%>
    <button type="button" class="btn btn-outline-info my-2 mx-1">Share</button>   <!-- Button to share meal via twitter-->

    <% recipe_img = @recipe['image'] %>
    
    

