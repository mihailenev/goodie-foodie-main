        </div>

        <!-- Page divider-->
        <hr class="mt-4 mb-4">

    </div>


    <div class="row my-2">

        <div class="col-6 ">

            <!-- Meal Instructions-->
            <h3>Instructions</h3>
            <%=@recipe['instructions']%>

        </div> 

