        <div class="col-6 ">
            <!-- Image for the meal-->
            <div class="card border-3 bg-dark w-50 shadow-sm" >
                <%= image_tag "#{recipe_img}", class:"card-img-top"%>
            </div>

        </div>

        <div class="col-6">
            <!-- Description of meal-->
            <p class="text"> <%=@recipe['summary'].html_safe %> 
            </p>      

