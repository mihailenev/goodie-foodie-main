<div class="card">
  <div class="card-header">
    <h3><%= t('.new_password_title') %></h3>
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-3">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:t('.email_enter') %>
      </div>

      <div class="actions">
        <%= f.submit t('.reset_btn'), class:"btn btn-danger" %>
      </div>
    <% end %>
  </div>
</div>
<br/>
<!-- to put back to log in -->
<%= render "devise/shared/links" %>
